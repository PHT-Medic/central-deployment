[
    {
        "id": "central-ui-webhook",
        "execute-command": "/opt/central/ui/update.sh",
        "command-working-directory": "/opt/central/ui",
        "trigger-rule":{
            "and": [
                {
                    "match": {
                        "type": "payload-hash-sha1",
                        "secret": "GITHUB_SECRET",
                        "parameter": {
                            "source": "header",
                            "name": "X-Hub-Signature"
                        }
                    }
                },
                {
                    "or": [
                        {
                            "match": {
                                "type": "value",
                                "value": "refs/heads/docker",
                                "parameter": {
                                    "source": "payload",
                                    "name": "ref"
                                }
                            }
                        },
                        {
                            "match": {
                                "type": "regex",
                                "value": "refs/heads/v*",
                                "parameter": {
                                    "source": "payload",
                                    "name": "ref"
                                }
                            }
                        }
                    ]
                }
            ]
        }
    }
]
